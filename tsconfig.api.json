{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src/api",
        "rootDirs": [ "./dist/out-tsc" ],
        "outDir": "./dist/out-tsc",
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/api/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}