{
  "name": "ciclope.ui",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint && npm run test",
    "build": "rimraf dist && npm run compile:all && npm run assets && npm run scss",
    "compile:all": "npm run compile:index && npm run compile:lib && npm run compile:api",
    "compile:lib": "tsc -p tsconfig.lib.json && tsc-alias -p tsconfig.aliases.json",
    "compile:api": "tsc -p tsconfig.api.json && tsc-alias -p tsconfig.aliases.json && npm run analyze -- --exclude dist",
    "compile:index": "tsc && tsc-alias -p tsconfig.aliases.json",
    "dev:lib": "nodemon src/lib/index.ts",
    "dev:api": "nodemon src/api/components/index.ts",
    "scss": "npm run scss:default && npm run scss:micrablepharus && npm run scss:vanzosaura && npm run scss:zap && npm run scss:viva && npm run scss:aulera && npm run scss:custom",
    "scss:default": "node-sass src/ui/scss/themes/default.scss -o dist/themes --output-style compressed",
    "scss:micrablepharus": "node-sass src/ui/scss/themes/micrablepharus.scss -o dist/themes --output-style compressed",
    "scss:vanzosaura": "node-sass src/ui/scss/themes/vanzosaura.scss -o dist/themes --output-style compressed",
    "scss:zap": "node-sass src/ui/scss/themes/zap-imoveis.scss -o dist/themes --output-style compressed",
    "scss:viva": "node-sass src/ui/scss/themes/viva-real.scss -o dist/themes --output-style compressed",
    "scss:aulera": "node-sass src/ui/scss/themes/aulera.scss -o dist/themes --output-style compressed",
    "scss:custom": "node-sass src/ui/scss/themes/custom.scss -o dist/themes --output-style compressed",
    "scss:watch": "node-sass src/ui/scss/themes/default.scss --watch -o dist/themes compressed",
    "assets": "mkdirp dist/assets && cp -r src/ui/assets/* dist/assets",
    "analyze": "cem analyze --litelement",
    "storybook": "npm run compile:api && npm run analyze -- --exclude dist && concurrently -k -r \"tsc -p tsconfig.api.json --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore --ignore-pattern dist/*",
    "pretest": "npm run compile:api",
    "test": "karma start karma.config.js --coverage"
  },
  "dependencies": {
    "@lit-labs/motion": "^1.0.2",
    "axios": "^0.26.1",
    "balloon-css": "^1.2.0",
    "imask": "^6.4.2",
    "lit": "^2.2.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^3.1.2",
    "@open-wc/testing-karma": "^4.0.9",
    "@storybook/addons": "^6.4.19",
    "@storybook/theming": "^6.4.19",
    "@types/node": "15.0.3",
    "@types/node-sass": "^4.11.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-storybook": "next",
    "@web/test-runner": "next",
    "chai": "^4.3.6",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "concurrently": "^5.3.0",
    "css-loader": "^6.7.1",
    "deepmerge": "^4.2.2",
    "eslint": "^8.10.0",
    "html-webpack-plugin": "^5.3.2",
    "karma": "^6.3.17",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "mkdirp": "^1.0.4",
    "mocha": "^9.2.2",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.7",
    "sass-loader": "^12.6.0",
    "storybook": "^6.4.19",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.7",
    "tsc": "^2.0.3",
    "tsc-alias": "^1.3.9",
    "typescript": "^4.6.2",
    "typings": "2.1.1"
  },
  "author": "Leonardo Gon√ßalves",
  "customElements": "custom-elements.json"
}
