{
  "name": "lizard.ui",
  "version": "0.8.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && npm run sucrase && npm run assets && npm run scss && npm run clean",
    "sucrase": "npm run types && sucrase ./src -d ./dist --transforms typescript,imports",
    "start:dev": "nodemon src/index.ts",
    "scss:watch": "node-sass src/scss --watch -o dist/theme compressed",
    "scss:default:watch": "node-sass src/scss/themes/default.scss --watch -o dist/theme compressed",
    "scss:micrablepharus:watch": "node-sass src/scss/themes/micrablepharus.scss --watch -o dist/theme compressed",
    "scss:vanzosaura:watch": "node-sass src/scss/themes/vanzosaura.scss --watch -o dist/theme compressed",
    "scss": "npm run scss:default && npm run scss:micrablepharus && npm run scss:vanzosaura && npm run scss:custom",
    "scss:default": "node-sass src/scss/themes/default.scss -o dist/theme --output-style compressed",
    "scss:micrablepharus": "node-sass src/scss/themes/micrablepharus.scss -o dist/theme --output-style compressed",
    "scss:vanzosaura": "node-sass src/scss/themes/vanzosaura.scss -o dist/theme --output-style compressed",
    "scss:custom": "node-sass src/scss/themes/custom.scss -o dist/theme --output-style compressed",
    "clean": "rimraf dist/scss",
    "types": "tsc --declaration",
    "assets": "cp -r src/assets/* dist/assets"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "balloon-css": "^1.2.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.7",
    "sucrase": "^3.17.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/node-sass": "^4.11.1"
  }
}
