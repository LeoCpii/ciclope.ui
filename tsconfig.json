{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/lib",
    "rootDirs": [ "./dist/lib" ],
    "outDir": "./dist/lib",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "tests/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
