{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/index.ts",
    "rootDirs": [ "./dist" ],
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "/coverage",
    "/dist"
  ]
}
